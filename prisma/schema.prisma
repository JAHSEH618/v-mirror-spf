// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model WidgetSettings {
  id                 String   @id @default(uuid())
  shop               String   @unique
  
  // Position
  position           String   @default("bottom-right")
  horizontalOffset   Int      @default(20)
  verticalOffset     Int      @default(20)
  
  // Appearance
  primaryColor       String   @default("#7C3AED")
  textColor          String   @default("#FFFFFF")
  logoUrl            String?
  
  // Text Content
  buttonText         String   @default("Try It On")
  tooltipText        String   @default("See how it looks on you!")
  modalTitle         String   @default("AI Virtual Try-On")
  uploadInstructions String   @default("Upload a full-body photo for best results")
  
  // Advanced
  smartDetection     Boolean  @default(false)
  showOnMobile       Boolean  @default(true)
  animationStyle     String   @default("fade-in")
  
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model BillingInfo {
  id                 String   @id @default(uuid())
  shop               String   @unique
  
  // Subscription Plan
  planName           String   @default("Free Plan")
  status             String   @default("ACTIVE") // ACTIVE, CANCELLED, FROZEN
  
  // Usage Limits
  usageLimit         Int      @default(10)      // Monthly limit
  currentUsage       Int      @default(0)       // Usage in current cycle
  cycleStartDate     DateTime @default(now())
  
  // Payment Info Snapshot (Legacy/Cached)
  paymentType        String?  @default("CREDIT_CARD")
  cardBrand          String?
  cardLast4          String?
  cardExpiry         String?
  
  paymentMethods     PaymentMethod[]
  
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model PaymentMethod {
  id            String      @id @default(uuid())
  billingInfo   BillingInfo @relation(fields: [billingInfoId], references: [id])
  billingInfoId String
  
  brand         String      // visa, mastercard, amex
  last4         String
  expiry        String      // MM/YYYY
  isDefault     Boolean     @default(false)
  
  createdAt     DateTime    @default(now())
}

model BillingHistory {
  id                 String   @id @default(uuid())
  shop               String
  
  date               DateTime @default(now())
  description        String
  amount             Float
  currency           String   @default("USD")
  status             String   @default("PAID") // PAID, PENDING, FAILED
  invoiceUrl         String?
  
  createdAt          DateTime @default(now())
}

model UsageStat {
  id                 String   @id @default(uuid())
  shop               String
  
  date               DateTime @default(now()) // The date of usage
  count              Int      @default(0)     // Usage count for this day
  
  @@unique([shop, date]) // One record per shop per day (ideally truncate date to day)
}
